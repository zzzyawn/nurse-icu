}

.content-block p {
  color: var(--muted);
  font-size: 1rem;
  line-height: 1.6;
  max-width: 600px;
  margin: 0 auto;
}
.nav-active{background:rgba(255,255,255,.25);box-shadow:inset 0 1px 0 rgba(255,255,255,.2)}
.small{
  font-size:0.95rem;
  color:var(--muted);
  line-height: 1.6;
}

